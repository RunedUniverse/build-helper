<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>net.runeduniverse.tools</groupId>
	<artifactId>build-helper</artifactId>
	<version>2021.12.06</version>
	<packaging>pom</packaging>
	<name>Build Helper</name>
	<description>contains dependency management for build/install/deploy of maven projects</description>
	<inceptionYear>2021</inceptionYear>

	<modules>
		<module>build-helper-java</module>
	</modules>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<!-- ACTIVITIONS -->
		<license-enforce>false</license-enforce>
		<!-- ACTIVITIONS - LICENSES -->
		<license-prj-utils-approve>false</license-prj-utils-approve>
		<license-apache2-approve>false</license-apache2-approve>
		<!-- VERSIONS -->
		<plugin-maven-clean-version>2.5</plugin-maven-clean-version>
		<plugin-maven-install-version>2.4</plugin-maven-install-version>
		<plugin-mycila-license-version>4.2.rc1</plugin-mycila-license-version>
		<plugin-maven-gpg-version>3.0.1</plugin-maven-gpg-version>
		<plugin-mojohaus-build-helper-version>3.2.0</plugin-mojohaus-build-helper-version>
		<plugin-maven-deploy-version>2.8.2</plugin-maven-deploy-version>
	</properties>

	<licenses>
		<license>
			<name>Apache License, Version 2</name>
			<url>https://www.apache.org/licenses/LICENSE-2.0</url>
		</license>
	</licenses>

	<organization>
		<name>RunedUniverse</name>
		<url>https://www.runeduniverse.net</url>
	</organization>

	<developers>
		<developer>
			<id>pl4yingnight</id>
			<name>Pl4yingNight</name>
			<email>pl4yingnight@gmail.com</email>
			<organization>RunedUniverse</organization>
			<organizationUrl>https://www.runeduniverse.net</organizationUrl>
			<timezone>Europe/Vienna</timezone>
			<roles>
				<role>Maintainer</role>
				<role>Developer</role>
			</roles>
		</developer>
	</developers>

	<scm>
		<url>https://github.com/RunedUniverse/build-helper</url>
		<connection>scm:git:git://github.com/RunedUniverse/build-helper.git</connection>
		<developerConnection>scm:git:git@github.com:RunedUniverse/build-helper.git</developerConnection>
	</scm>
	<issueManagement>
		<system>GitHub Issues</system>
		<url>https://github.com/RunedUniverse/build-helper/issues</url>
	</issueManagement>

	<profiles>
		<!-- DISTRIBUTION -->
		<profile>
			<id>repo-releases</id>
			<distributionManagement>
				<repository>
					<id>runeduniverse-releases</id>
					<url>https://nexus.runeduniverse.net/repository/maven-releases/</url>
				</repository>
			</distributionManagement>
			<build>
				<pluginManagement>
					<plugins>
						<plugin>
							<groupId>org.apache.maven.plugins</groupId>
							<artifactId>maven-gpg-plugin</artifactId>
							<configuration>
								<repositoryId>runeduniverse-releases</repositoryId>
								<url>https://nexus.runeduniverse.net/repository/maven-releases/</url>
							</configuration>
						</plugin>
					</plugins>
				</pluginManagement>
			</build>
		</profile>
		<profile>
			<id>repo-development</id>
			<distributionManagement>
				<repository>
					<id>runeduniverse-development</id>
					<url>https://nexus.runeduniverse.net/repository/maven-development/</url>
				</repository>
			</distributionManagement>
			<build>
				<pluginManagement>
					<plugins>
						<plugin>
							<groupId>org.apache.maven.plugins</groupId>
							<artifactId>maven-gpg-plugin</artifactId>
							<configuration>
								<repositoryId>runeduniverse-development</repositoryId>
								<url>https://nexus.runeduniverse.net/repository/maven-development/</url>
							</configuration>
						</plugin>
					</plugins>
				</pluginManagement>
			</build>
		</profile>
		<profile>
			<id>repo-snapshots</id>
			<distributionManagement>
				<repository>
					<id>runeduniverse-snapshots</id>
					<url>https://nexus.runeduniverse.net/repository/maven-snapshots/</url>
				</repository>
			</distributionManagement>
			<build>
				<pluginManagement>
					<plugins>
						<plugin>
							<groupId>org.apache.maven.plugins</groupId>
							<artifactId>maven-gpg-plugin</artifactId>
							<configuration>
								<repositoryId>runeduniverse-snapshots</repositoryId>
								<url>https://nexus.runeduniverse.net/repository/maven-snapshots/</url>
							</configuration>
						</plugin>
					</plugins>
				</pluginManagement>
			</build>
		</profile>
		<profile>
			<id>repo-maven-central</id>
			<distributionManagement>
				<repository>
					<id>central-nexus</id>
					<url>https://s01.oss.sonatype.org/service/local/staging/deploy/maven2/</url>
				</repository>
			</distributionManagement>
			<build>
				<pluginManagement>
					<plugins>
						<plugin>
							<groupId>org.apache.maven.plugins</groupId>
							<artifactId>maven-gpg-plugin</artifactId>
							<configuration>
								<repositoryId>central-nexus</repositoryId>
								<url>https://s01.oss.sonatype.org/service/local/staging/deploy/maven2/</url>
							</configuration>
						</plugin>
					</plugins>
				</pluginManagement>
			</build>
		</profile>
		<profile>
			<id>repo-maven-central-snapshots</id>
			<distributionManagement>
				<snapshotRepository>
					<id>central-nexus</id>
					<url>https://s01.oss.sonatype.org/content/repositories/snapshots</url>
				</snapshotRepository>
			</distributionManagement>
			<build>
				<pluginManagement>
					<plugins>
						<plugin>
							<groupId>org.apache.maven.plugins</groupId>
							<artifactId>maven-gpg-plugin</artifactId>
							<configuration>
								<repositoryId>central-nexus</repositoryId>
								<url>https://s01.oss.sonatype.org/content/repositories/snapshots</url>
							</configuration>
						</plugin>
					</plugins>
				</pluginManagement>
			</build>
		</profile>
		<!-- LICENSES -->
		<profile>
			<id>license-check</id>
			<build>
				<defaultGoal>license:check</defaultGoal>
				<plugins>
					<plugin>
						<groupId>com.mycila</groupId>
						<artifactId>license-maven-plugin</artifactId>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>license-update</id>
			<build>
				<defaultGoal>license:format</defaultGoal>
				<plugins>
					<plugin>
						<groupId>com.mycila</groupId>
						<artifactId>license-maven-plugin</artifactId>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<!-- APPROVE - RunedUniverse Utils Packages -->
			<id>license-prj-utils-approve</id>
			<activation>
				<property>
					<name>license-prj-utils-approve</name>
					<value>true</value>
				</property>
			</activation>
			<build>
				<pluginManagement>
					<plugins>
						<plugin>
							<groupId>com.mycila</groupId>
							<artifactId>license-maven-plugin</artifactId>
							<configuration>
								<dependencyPolicies>
									<dependencyPolicy>
										<type>ARTIFACT_PATTERN</type>
										<rule>APPROVE</rule>
										<value>net.runeduniverse.lib.utils</value>
									</dependencyPolicy>
								</dependencyPolicies>
							</configuration>
						</plugin>
					</plugins>
				</pluginManagement>
			</build>
		</profile>
		<profile>
			<!-- APPROVE - Apache 2 -->
			<id>license-apache2-approve</id>
			<activation>
				<property>
					<name>license-apache2-approve</name>
					<value>true</value>
				</property>
			</activation>
			<build>
				<pluginManagement>
					<plugins>
						<plugin>
							<groupId>com.mycila</groupId>
							<artifactId>license-maven-plugin</artifactId>
							<configuration>
								<dependencyPolicies>
									<dependencyPolicy>
										<type>LICENSE_NAME</type>
										<rule>APPROVE</rule>
										<value>Apache License, Version 2</value>
									</dependencyPolicy>
									<dependencyPolicy>
										<type>LICENSE_NAME</type>
										<rule>APPROVE</rule>
										<value>The Apache Software License, Version 2.0</value>
									</dependencyPolicy>
									<dependencyPolicy>
										<type>LICENSE_URL</type>
										<rule>APPROVE</rule>
										<value>http://www.apache.org/licenses/LICENSE-2.0</value>
									</dependencyPolicy>
									<dependencyPolicy>
										<type>LICENSE_URL</type>
										<rule>APPROVE</rule>
										<value>https://www.apache.org/licenses/LICENSE-2.0</value>
									</dependencyPolicy>
									<dependencyPolicy>
										<type>LICENSE_URL</type>
										<rule>APPROVE</rule>
										<value>http://www.apache.org/licenses/LICENSE-2.0.txt</value>
									</dependencyPolicy>
									<dependencyPolicy>
										<type>LICENSE_URL</type>
										<rule>APPROVE</rule>
										<value>https://www.apache.org/licenses/LICENSE-2.0.txt</value>
									</dependencyPolicy>
								</dependencyPolicies>
							</configuration>
						</plugin>
					</plugins>
				</pluginManagement>
			</build>
		</profile>
		<!-- JENKINS -->
		<profile>
			<id>jenkins-install</id>
			<build>
				<defaultGoal>clean gpg:sign install</defaultGoal>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-clean-plugin</artifactId>
					</plugin>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-gpg-plugin</artifactId>
					</plugin>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-install-plugin</artifactId>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>jenkins-test-system</id>
			<build>
				<defaultGoal>test</defaultGoal>
			</build>
		</profile>
		<profile>
			<id>jenkins-deploy</id>
			<build>
				<defaultGoal>deploy</defaultGoal>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-deploy-plugin</artifactId>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>jenkins-deploy-signed</id>
			<build>
				<defaultGoal>build-helper:attach-artifact deploy</defaultGoal>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-deploy-plugin</artifactId>
					</plugin>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>build-helper-maven-plugin</artifactId>
						<configuration>
							<artifacts>
								<artifact>
									<file>${project.build.directory}/${project.build.finalName}.pom.asc</file>
									<type>pom.asc</type>
								</artifact>
							</artifacts>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
		<!-- HELPER - PROFILES -->
		<profile>
			<id>helper-properties</id>
			<properties>
				<root-dir>${project.basedir}</root-dir>
			</properties>
		</profile>
		<profile>
			<id>helper-license</id>
			<build>
				<defaultGoal>license:format</defaultGoal>
				<plugins>
					<plugin>
						<groupId>com.mycila</groupId>
						<artifactId>license-maven-plugin</artifactId>
						<configuration>
							<properties>
								<year>2021</year>
								<owner>Pl4yingNight</owner>
								<email>pl4yingnight@gmail.com</email>
							</properties>
							<licenseSets>
								<licenseSet>
									<header>${root-dir}/src/license/header.txt</header>
								</licenseSet>
							</licenseSets>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>helper-install</id>
			<build>
				<defaultGoal>clean install</defaultGoal>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-clean-plugin</artifactId>
					</plugin>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-install-plugin</artifactId>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>helper-deploy</id>
			<build>
				<defaultGoal>deploy</defaultGoal>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-deploy-plugin</artifactId>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-clean-plugin</artifactId>
					<version>${plugin-maven-clean-version}</version>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-install-plugin</artifactId>
					<version>${plugin-maven-install-version}</version>
				</plugin>
				<plugin>
					<groupId>com.mycila</groupId>
					<artifactId>license-maven-plugin</artifactId>
					<version>${plugin-mycila-license-version}</version>
					<configuration>
						<mapping>
							<java>SLASHSTAR_STYLE</java>
						</mapping>
						<licenseSets>
							<licenseSet>
								<!-- <header/> to be overwritten -->
								<excludes>
									<exclude>**/license/**</exclude>
								</excludes>
							</licenseSet>
						</licenseSets>
						<dependencyEnforce>${license-enforce}</dependencyEnforce>
						<dependencyExceptionMessage>1 or more dependencies got rejected
							doe to invalid licenses!
							Contact the Maintainer for a solution!</dependencyExceptionMessage>
					</configuration>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-gpg-plugin</artifactId>
					<version>${plugin-maven-gpg-version}</version>
					<configuration>
						<homedir>/var/lib/jenkins/gpg</homedir>
					</configuration>
				</plugin>
				<plugin>
					<groupId>org.codehaus.mojo</groupId>
					<artifactId>build-helper-maven-plugin</artifactId>
					<version>${plugin-mojohaus-build-helper-version}</version>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-deploy-plugin</artifactId>
					<version>${plugin-maven-deploy-version}</version>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>
</project>